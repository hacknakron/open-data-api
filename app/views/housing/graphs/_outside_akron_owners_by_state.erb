<script type="text/javascript">

  // Set a callback to run when the Google Visualization API is loaded.
  google.charts.setOnLoadCallback(drawOutsideAkronOwnersByCityChart);

  // Callback that creates and populates a data table,
  // instantiates the pie chart, passes in the data and
  // draws it.
  function drawOutsideAkronOwnersByCityChart() {

    // Create the data table.
    var data = new google.visualization.DataTable();
    data.addColumn('string', 'State');
    data.addColumn('number', 'Owners');
    data.addRows(JSON.parse('<%= @outside_akron_owners_by_state.to_json.html_safe %>'));

    // Set chart options
    var options = {
      'region': "US",
      colorAxis: {colors: ['#C0D7EA', '#75A7CF', '#00549d', '#152b45']},
      resolution: "provinces"
    };

    // Instantiate and draw our chart, passing in some options.
    var chart = new google.visualization.GeoChart(document.getElementById('outside-akron-owners-by-city-chart'));
    chart.draw(data, options);
  }
</script>

<div class="wrapper">
  <h2>Akron Properties Owned by People Outside of Ohio</h2>

  <div id="outside-akron-owners-by-city-chart">

  </div>
</div>


